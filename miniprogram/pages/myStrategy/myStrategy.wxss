.coverImg{
  width: 100%;
  min-height: 710rpx;
}

.navBarTop{
  position: fixed;
  z-index: 100;
  top: 0;
  width: 100%;
}
.navBarTop text{
  line-height: 30rpx;
  display: block;
  width: 100%;
  height: 30rpx;
  text-align: center;
  position: absolute;
  top: 60rpx;
}
.back{
  position: absolute;
  z-index: 100;
  width: 40rpx;
  height: 40rpx;
  left: 5%;
  top: 60rpx;
}

.author{
  width: 90%;
  height: 100rpx;
  left: 5%;
  position: absolute;
  top: 500rpx;
  z-index: 90;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.author .authorImg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.author .authorInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  color: white;
}
.author .authorInfo .name{
  font-size: 40rpx;
  font-weight: bold;
}
.author .authorInfo .school{
  text-align: center;
  font-size: 30rpx;
  background-color: rgb(0,0,0,0.8);
  color: rgb(255,255,255,0.8);
  border-radius: 50rpx;
}
.author .authorInfo .sex{
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.data{
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 5%;
  top: 350rpx;
  color: white;
  z-index: 100;
  font-size: 30rpx;
  text-align: right;
}

.content{
  position: absolute;
  top: 700rpx;
  width: 100%;
  background-color: white;
  padding-bottom: 200rpx;
  border-radius: 25rpx;
}
.content .top{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1px solid rgb(245,245,245);
}
.content .top text{
  line-height: 60rpx;
  text-align: center;
  color: rgb(153,153,153);
  font-size: 30rpx;
  padding: 10rpx 0;
}

.content .myStrategy{
  width: 90%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content .myStrategy .item{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 200rpx;
}
.content .myStrategy .item .date{
  width: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.content .myStrategy .item .date .publishDay{
  font-size: 40rpx;
}
.content .myStrategy .item .date .publishMonth{
  font-size: 24rpx;
  color: rgb(153,153,153);
}
.content .myStrategy .item .strategyContent{
  width: 85%;
  display: flex;
  flex-direction: row;
}
.content .myStrategy .item .strategyContent text{
  width: 70%;
  height: 80rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
}
.content .myStrategy .item .strategyContent image{
  width: 30%;
  max-height: 160rpx;
  margin-right: 20rpx;
}

.bottom{
  position: fixed;
  z-index: 100;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bottom .follow,.join{
  width: 50%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-top: 1px solid rgb(245,245,245);
}
.bottom image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}