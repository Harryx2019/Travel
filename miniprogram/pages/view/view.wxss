.top{
  width: 100%;
  position: fixed;
  background-color: white;
  z-index: 100;
}
.top .back{
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  left: 0;
}
.topTitle{
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  position: absolute;
  left: 34%;
}

.search{
  position: relative;

}
.searchInput{
  position: absolute;
  bottom: 0;
  text-align: center;
  left: 5%;
  height: 40px;
  width: 90%;
  background-color: rgb(246,247,249);
  border-radius: 50rpx;
}

.select{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.select .selectItem{
  width: 25%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: rgb(114,115,119);
  font-size: 28rpx;
}
.select .selectItem image{
  height: 40rpx;
  width: 40rpx;
}

.sort{
  position: fixed;
  width: 100%;
  background-color: rgb(0,0,0,0.5);
  z-index: 10;
}
.sortArea{
  background-color: white;
  /*动画前初始位置*/
  transform:translateY(-300px);
}
.sortType{
  display: block;
  background-color: white;
  width: 90%;
  border-bottom: 1px solid rgb(242,242,242);
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
}

.menuTitle{
  display: block;
  padding: 10rpx 8%;
}
.menuContent{
  width: 84%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 100rpx;
}
.menuItem{
  font-size: 28rpx;
  text-align: center;
  width: 30%;
  height: 80rpx;
  margin: 10rpx 0;
  line-height: 80rpx;
  background-color: rgb(246,247,249);
}

/* 热门景点详情 */
.viewContent{
  width: 95%;
  margin: 0 auto;
  background-color: white;
  border-radius: 6%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.viewContent .viewItem{
  padding: 10rpx 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 10rpx solid rgb(245,245,245,0.8);
}
/* 景点图片 */
.viewContent .viewItem .viewLeft{
  width: 38%;
  height: 240rpx;
  border-radius: 5%;
}
.viewContent .viewItem .viewRight{
  width: 60%;
  height: 200rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
/* 景点名称 */
.viewContent .viewItem .viewName{
  font-weight: bold;
}
/* 景点推荐星数 */
.viewContent .viewItem .viewStar{
  color: red;
  font-size: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.viewContent .viewItem .viewStar text{
  margin-right: 20rpx;
}
.viewContent .viewItem .viewStar .star{
  width: 30rpx;
  height: 30rpx;
}
/* 景点描述 */
.viewContent .viewItem .viewDescription{
  font-size: 24rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:3; 
  -webkit-box-orient:vertical;
}
/* 景点地点 */
.viewContent .viewItem .viewLocation{
  position: absolute;
  top: 5%;
  right: 10%;
  background-color: rgb(245,245,245);
  font-size: 24rpx;
  padding: 5rpx;
}

.emptyImg{
  width: 100rpx;
  height: 100rpx;
}