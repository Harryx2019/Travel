.cover{
  width: 100%;
}

.navigate{
  width: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
}
.navigateTitle{
  font-size: 40rpx;
  font-weight: bold;
  width: 100%;
  text-align: center;
  position: absolute;
  z-index: 100;
}
.back{
  position: absolute;
  z-index: 1000;
  width: 40rpx;
  height: 40rpx;
  left: 5%;
  top: 60rpx;
}

.content{
  position: absolute;
  width: 100%;
}
.form{
  position: absolute;
  width: 80%;
  left: 10%;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  padding-bottom: 50rpx;
  background-color: rgb(255,255,255,0.9);
  border-radius: 50rpx;
  box-shadow: 5px 3px 5px #888888;
  font-size: 26rpx;
}
.formContent{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  width: 90%;
  margin: 0 auto;
}
.formContent .strategyCover{
  width: 90%;
  height: 300rpx;
  margin: 20rpx auto; 
  border: 1px solid rgb(235,235,235);
  border-radius: 25rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.formContent .upLoadImg{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.upLoadImgIcon{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 20rpx;
}
.formContent .formItem{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  border: 1px solid rgb(235,235,235);
  border-radius: 25rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}
.formIcon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.formContent .formItem input{
  padding-left: 20rpx;
  line-height: 40rpx;
  width: 50%;
  text-align: center;
}
.formContent .formItem .picker{
  margin-left: 20rpx;
}

.strategy{
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid rgb(235,235,235);
  border-radius: 25rpx;
  line-height: 40rpx;
  padding: 0 10rpx;
  margin: 10rpx 0;
}
.contentTitle{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.strategyContent{
  text-align:center;
  height: 200rpx;
  margin: 10rpx 0;
}

.submit{
  background-color: rgb(47,141,240);
  color: white;
}