page {
  background-color: rgb(246, 247, 249);
}

swiper {
  width: 100%;
  height: 400rpx;
}

swiper swiper-item {
  width: 100%;
}

.search {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  font-size: 26rpx;
}

.search .back {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  left: 0;
}

.search .searchIcon {
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  left: 15%;
  z-index: 10;
}

.search input {
  position: absolute;
  width: 40%;
  left: 12%;
  border-radius: 50rpx;
  padding-left: 80rpx;
}

.user {
  position: absolute;
  padding: 0;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgb(0, 0, 0, 0);
  z-index: 100;
}

.userImg {
  position: absolute;
  border-radius: 50%;
  overflow: hidden;
  width: 60rpx;
  height: 60rpx;
}

.title {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  margin: 20rpx 20rpx;
  position: relative;
}

.teamTitle {
  position: absolute;
  z-index: -1;
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  color: rgb(126, 193, 230);
  font-weight: bold;
}

.title .region {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  width: 120rpx;
  height: 60rpx;
  border-radius: 20rpx;
  padding: 0 10rpx;
}

.region .selectIcon {
  width: 40rpx;
  height: 40rpx;
}

.region .selectCity {
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.title .select {
  position: absolute;
  right: 0;
  top: 0;
  width: 180rpx;
  height: 220rpx;
  overflow: hidden;
}
.select .selectButton{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background-color: white;
  width: 150rpx;
  height: 60rpx;
  border-radius: 20rpx;
  padding: 0 10rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 20;
}
.select .selectIcon {
  width: 40rpx;
  height: 40rpx;
}
.select .sort {
  background-color: white;
  /*动画前初始位置*/
  transform: translateY(-80px);
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
  width: 170rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.select .sort text{
  padding: 10rpx 0;
  border-bottom: 1px solid rgb(246, 247, 249);
}

.teamItem {
  width: 90%;
  margin: 0 auto;
  background-color: white;
  border-radius: 25rpx;
  margin-top: 20rpx;
  padding: 20rpx 0;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.tag {
  position: absolute;
  right: -10rpx;
  top: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
}

.empty {
  display: block;
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
  color: grey;
}

.teamHeadImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.teamInfo {
  width: 80%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-bottom: 20rpx;
}

.teamInfo .teamName {
  font-weight: bold;
}

.teamInfo .teamSchool {
  font-size: 26rpx;
  background-color: rgb(245, 245, 245);
  border-radius: 25rpx;
  padding: 5rpx 10rpx;
  line-height: 40rpx;
  max-width: 300rpx;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.teamInfo .teamData {
  width: 80%;
  height: 200rpx;
  background-color: beige;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 50rpx;
}

.teamData .dataItem {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
}

.dataIcon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.teamDes {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.teamDes .title {
  font-size: 30rpx;
  color: rgb(126, 193, 230);
}

.teamDes .context {
  width: 70%;
  font-size: 26rpx;
  margin-left: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.teamMember {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.teamMember .title {
  margin-right: 10rpx;
}

.teamMember .memberList {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  margin: 0 10rpx;
}

.teamMember .memberList .memberName {
  width: 80rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: center;
}

.teamMember .memberList .memberImg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}