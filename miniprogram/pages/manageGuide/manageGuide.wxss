page {
  background-color: rgb(246, 247, 249);
}

.navigate{
  width: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
}
.navigateTitle{
  font-size: 40rpx;
  font-weight: bold;
  width: 100%;
  text-align: center;
  position: absolute;
  z-index: 10;
}
.back{
  position: absolute;
  z-index: 100;
  width: 40rpx;
  height: 40rpx;
  left: 5%;
  top: 60rpx;
}

.cover{
  width: 100%;
}

.guideTitle{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.guideTitle .guideImg{
  margin-top: -80rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.guideName{
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.guideSchool{
  font-size: 26rpx;
  background-color: rgb(126, 193, 230);
  color: white;
  border-radius: 25rpx;
  padding: 5rpx 10rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 10rpx;
}
.editGuide{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-top: 10rpx;
  font-weight: bold;
}
.edit{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.applyList{
  background-color: white;
  width: 90%;
  margin: 20rpx auto;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-radius: 50rpx;
}
.empty{
  width: 100%;
  text-align: center;
}
.applyList .title{
  color: rgb(126, 193, 230);
  font-weight: bold;
}
.applyItem{
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  padding-bottom: 10rpx;
  border-bottom: 1px solid rgb(246, 247, 249);
  position: relative;
}
.button{
  position: absolute;
  right: 5%;
  top:0;
  width: 100rpx;
  height: 50rpx;
  background-color: rgb(126, 193, 230);
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: white;
  border-radius: 25rpx;
}
.applyItem .applicant{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.applyInfo{
  display: flex;
  flex-direction: column;
  width: 80%;
  font-size: 26rpx;
}
.applyInfo .top{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.applyInfo .top .name{
  font-size: 32rpx;
}
.applyInfo .top .location{
  margin-left: 20rpx;
  font-weight: normal;
  background-color: beige;
  padding: 5rpx 10rpx;
  border-radius: 25rpx;
}
.school,.description,.phone,.qq{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 5rpx 0;
}
.itemTitle{
  color: rgb(126, 193, 230);
  margin-right: 10rpx;
}
.itemIcon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}