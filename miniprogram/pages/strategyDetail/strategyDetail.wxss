.strategyDetail{
  position: absolute;
  width: 100%;
}
.top{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
}
.top>text{
  font-weight: bold;
  height: 90rpx;
  border-bottom: 6rpx solid rgb(0,153,255);
}
.top .location{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.top .locationImg{
  width: 40rpx;
  height: 40rpx;
}
/* 封面 */
.coverImg{
  width: 100%;
  height: 600rpx;
}
/* 作者信息 */
.author{
  position: relative;
  width: 90%;
  height: 100rpx;
  margin: 0 auto;
  /* background-color: bisque; */
  display: flex;
  flex-direction: row;
  align-items: center;
}
.author .authorImg{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.author .follow{
  font-size: 24rpx;
  width: 160rpx;
  border-radius: 50rpx;
  line-height: 30rpx;
  min-height: 20rpx;
  border : 1px solid black;
  margin: 0 20rpx;
}
.author .authorInfo{
  display: flex;
  height: 70rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}
.author .publishTime{
  color: rgb(184,185,186);
}
.author .destination{
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
  padding: 10rpx 20rpx;
  background-color: skyblue;
  border-radius: 10rpx;
}

.strategyInfo{
  width: 90%;
  height: 120rpx;
  margin: 40rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 26rpx;
}
.strategyInfo .infoItem{
  width: 49%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.strategyInfo .icon{
  width: 40rpx;
  height: 40rpx;
}
.strategyInfo .bar{
  color: rgb(69,144,230);
}

.strategyContent{
  width: 90%;
  line-height: 60rpx;
  margin: 0 auto;
  padding-bottom: 120rpx;
}

.bottom{
  position: fixed;
  z-index: 100;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  box-shadow:0 0 8px 1px #999; 
  background-color: white;
}
.bottom .icon{
  width: 40rpx;
  height: 40rpx;
}
.bottom .comment-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 30%;
  border-right: 1px solid  rgb(221,221,221);
}
.bottom .comment-like .share{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
}
.bottom .comment-like .share image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}