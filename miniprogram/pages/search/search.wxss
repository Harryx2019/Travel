.background{
  width: 100%;
  height: 550rpx;
}
.search{
  position: absolute;
  top: 20%;
  left: 8%;
  width: 80%;
  padding: 16rpx;
  border-radius: 100rpx;
  background-color: rgb(256,256,256);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.search image{
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}

.hotText{
  width: 250rpx;
  display: block;
  margin: 26rpx auto;
  color: rgb(153,153,153);
}
.destination{
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
}
.destination .destination-item{
  margin-bottom: 50rpx;
}
.destination image{
  position: relative;
  width: 180rpx;
  height: 160rpx;
}
.destination image text{
  position: absolute;
  text-align: center;
  width: 130rpx;
  height: 50rpx;
  top: 50%;
  left: 50%;
  margin-left: -65rpx;
  margin-top: -25rpx; 
  color: white;
}
